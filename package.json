{
  "name": "action-octopus-build-information",
  "private": true,
  "description": "GitHub Action that generates build information for Octopus Deploy",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run lint && npm run test && npm run clean",
    "build": "ncc build src/main.js -m",
    "debug": "node -r dotenv/config src/main.js",
    "clean": "shx rm -rf dist/*",
    "lint": "eslint . --cache --fix",
    "test": "jest"
  },
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "lodash": "^4.17.20",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.24.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "js-yaml": "^3.14.0",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "shx": "^0.3.3"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": "eslint --cache --fix"
  }
}
